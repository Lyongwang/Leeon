<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/view8" />-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="@string/login_text"
        android:enabled="false"
        android:textColor="@color/login_btn_color_selector"
        android:background="@drawable/login_submit_btn_selector"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view8" />

    <TextView
        android:id="@+id/tv_change_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableEnd="@drawable/login_ic_arrow_right"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="20dp"
        android:text="账号登录"
        android:textColor="@color/login_c_black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />
    <android.support.constraint.Group
        android:id="@+id/group_third"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="tv_third_login, iv_wxlogin, iv_qqlogin, iv_wblogin"/>

    <TextView
        android:id="@+id/tv_third_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/login_third_login"
        android:textColor="@color/login_c_646464"
        android:textSize="14sp"
        android:layout_marginBottom="@dimen/y20"
        app:layout_constraintBottom_toTopOf="@+id/iv_wxlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_wxlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/login_ic_wx"
        android:background="@drawable/login_third_circle_stroke"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_qqlogin"
        app:layout_constraintTop_toTopOf="@+id/iv_qqlogin" />

    <ImageView
        android:id="@+id/iv_qqlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x40"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginBottom="40dp"
        android:padding="10dp"
        android:src="@drawable/login_ic_qq"
        android:background="@drawable/login_third_circle_stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_wblogin"
        app:layout_constraintStart_toEndOf="@id/iv_wxlogin"
        app:layout_constraintTop_toBottomOf="@+id/tv_third_login" />

    <ImageView
        android:id="@+id/iv_wblogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/login_ic_wb"
        android:background="@drawable/login_third_circle_stroke"
        app:layout_constraintBottom_toBottomOf="@+id/iv_qqlogin"
        app:layout_constraintStart_toEndOf="@+id/iv_qqlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_qqlogin" />


</android.support.constraint.ConstraintLayout>